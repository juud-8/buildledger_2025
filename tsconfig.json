{
  "compilerOptions": {
    "module": "esnext", // or "es2020"
    "target": "es2020",
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
